FROM mcr.microsoft.com/dotnet/aspnet:8.0 AS base
WORKDIR /app
EXPOSE 8080

FROM mcr.microsoft.com/dotnet/sdk:8.0 AS build
WORKDIR /src
COPY ["Model_Management_Service/Model_Management_Service.csproj", "Model_Management_Service/"]
RUN dotnet restore "Model_Management_Service/Model_Management_Service.csproj"
COPY . .
WORKDIR "/src/Model_Management_Service"
RUN dotnet build "Model_Management_Service.csproj" -c Release -o /app/build

FROM build AS publish
RUN dotnet publish "Model_Management_Service.csproj" -c Release -o /app/publish /p:UseAppHost=false

FROM base AS final
WORKDIR /app
COPY --from=publish /app/publish .
ENTRYPOINT ["dotnet", "Model_Management_Service.dll"]